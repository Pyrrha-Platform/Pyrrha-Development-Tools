# EditorConfig for Pyrrha Platform
# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.java]
indent_size = 4

[*.{c,cpp,h,hpp,ino}]
indent_size = 2

[*.{sh,bash}]
indent_size = 2